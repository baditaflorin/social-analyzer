# Social Analyzer - Environment Configuration
# Copy this file to .env and configure your settings

# ===========================================
# Server Configuration
# ===========================================

# Port for the web server (default: 9005)
PORT=9005

# Server host (0.0.0.0 for Docker, localhost for local)
HOST=localhost

# Enable verbose debug logging (true/false)
VERBOSE=false

# ===========================================
# External API Configuration
# ===========================================

# Google Custom Search API credentials (optional)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=

# Google Custom Search Engine ID (optional)
# Create at: https://programmablesearchengine.google.com/
GOOGLE_API_CS=

# ===========================================
# Browser Automation
# ===========================================

# Selenium Grid URL (leave empty for local WebDriver)
# Example: http://selenium-hub:4444
SELENIUM_GRID_URL=

# ===========================================
# Network Configuration
# ===========================================

# HTTP/HTTPS proxy (optional)
# Example: http://proxy.example.com:8080
HTTP_PROXY=

# User-Agent string for HTTP requests
USER_AGENT=Mozilla/5.0 (X11; Ubuntu; Linux x86_64; rv:102.0) Gecko/20100101 Firefox/102.0

# ===========================================
# Security Configuration
# ===========================================

# Session secret for CSRF protection (REQUIRED in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Enable CORS (true/false) - only enable if needed
ENABLE_CORS=false

# Allowed CORS origins (comma-separated, if CORS enabled)
# Example: http://localhost:3000,https://app.example.com
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Rate Limiting
# ===========================================

# Maximum requests per IP per window (default: 100)
RATE_LIMIT_MAX=100

# Rate limit window in minutes (default: 15)
RATE_LIMIT_WINDOW=15

# ===========================================
# Detection Configuration
# ===========================================

# Detection level: extreme, high, normal, low (default: high)
DETECTION_LEVEL=high

# Maximum concurrent fast scans (default: 15)
MAX_FAST_WORKERS=15

# Maximum concurrent slow scans (default: 8)
MAX_SLOW_WORKERS=8

# Maximum concurrent special scans (default: 5)
MAX_SPECIAL_WORKERS=5

# HTTP request timeout in seconds (default: 5)
REQUEST_TIMEOUT=5

# ===========================================
# Logging Configuration
# ===========================================

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=true

# Log directory (default: ./logs)
LOG_DIR=./logs

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# ===========================================
# Data Paths
# ===========================================

# Path to sites.json (default: ./data/sites.json)
SITES_DATA_PATH=./data/sites.json

# Path to names.json (default: ./data/names.json)
NAMES_DATA_PATH=./data/names.json

# Path to languages.json (default: ./data/languages.json)
LANGUAGES_DATA_PATH=./data/languages.json

# Path to dictionary (default: ./data/dict.json)
DICT_DATA_PATH=./data/dict.json

# Path to countries.json (default: ./data/countries.json)
COUNTRIES_DATA_PATH=./data/countries.json
